<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:gravity="center">


            <ImageView
                android:layout_width="130dp"
                android:layout_marginTop="40dp"
                android:layout_height="110dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/tablogo"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="COVID'19"
                android:textFontWeight="600"
                android:fontFamily="@font/js"
                android:textSize="35sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textColorHint="@color/colorAccent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Medical Goods Tracking"
                android:fontFamily="@font/js"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:paddingBottom="15dp"
                android:textColorHint="@color/colorAccent"
                />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="330dp"
            android:layout_marginBottom="50dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp">

                <Button
                    android:id="@+id/hospital"
                    android:layout_width="145dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_button"
                    android:elevation="3dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="10dp"
                    android:drawableTop="@drawable/hospital"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentLeft="true"
                    android:text="Hospital"
                    android:textColor="#000000"
                    android:textSize="14dp"/>




                <Button
                    android:id="@+id/Ngo"
                    android:layout_width="145dp"
                    android:layout_height="140dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_button"
                    android:layout_alignParentRight="true"
                    android:elevation="3dp"
                    android:drawableTop="@drawable/ngo"
                    android:paddingTop="10dp"
                    android:paddingBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Ngo"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp">


                <Button
                    android:id="@+id/acc_req"
                    android:layout_width="145dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_button"
                    android:elevation="3dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_marginTop="10dp"
                    android:drawableTop="@drawable/acc_req"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentLeft="true"
                    android:text="Accepted Request"
                    android:textColor="#000000"
                    android:textSize="14dp"/>



                <Button
                    android:id="@+id/pen_req"
                    android:layout_width="145dp"
                    android:layout_height="140dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_button"
                    android:layout_alignParentRight="true"
                    android:elevation="3dp"
                    android:drawableTop="@drawable/pen_req"
                    android:paddingTop="10dp"
                    android:paddingBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Pending Request"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp">


                <Button
                    android:id="@+id/about"
                    android:layout_width="145dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_button"
                    android:elevation="3dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_marginTop="10dp"
                    android:drawableTop="@drawable/about"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentLeft="true"
                    android:text="About Us"
                    android:textColor="#000000"
                    android:textSize="14dp"/>



                <Button
                    android:id="@+id/terms"
                    android:layout_width="145dp"
                    android:layout_height="140dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_button"
                    android:layout_alignParentRight="true"
                    android:elevation="3dp"
                    android:drawableTop="@drawable/terms"
                    android:paddingTop="10dp"
                    android:paddingBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Terms and Conditions"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    />




            </RelativeLayout>


        </LinearLayout>



    </RelativeLayout>
</ScrollView>